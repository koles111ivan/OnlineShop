@model List<ProductViewModel>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-3 card shadow">
            <img class="card-img-top" src="@product.ImagePath" alt="Изображение товара" />
            <div class="card-body">
                <a style="color:black"
                   asp-area=""
                   asp-controller="Product"
                   asp-action="Index"
                   asp-route-id="@product.Id">
                    <h5>@product.Name</h5>
                </a>
                <h5>@product.Cost руб</h5>
                <a class="btn btn-danger"
                   asp-area=""
                   asp-controller="Compare"
                   asp-action="Remove"
                   asp-route-productId="@product.Id"
                   role="button">Удалить из сравнения</a>
            </div>
        </div>
    }
</div>
@if (Model.Count > 0)
{
    <form method="post" asp-action="Clear">
        <button class="btn btn-warning" type="submit">Очистить сравнение</button>
    </form>
}