@using OnlineShop.Areas.Admin.Models
@model Login
<form method="post">
<div>
    <h3>Вход</h3>
</div>
<div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
<input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>
<div class="row">
    <div class="col-6">
        <label asp-for="UserName"></label><br/>
        <input class="form-control" asp-for="UserName"/>
        <span asp-validation-for="UserName"/>
    </div>
</div>

<div class="row">
        <div class="col-6">
            <label asp-for="Password"></label><br />
            <input class="form-control" asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
</div>

<div class="row">
    <div class="col-6">
            <label>Запомнить меня</label>
            <input class="form-control" type="checkbox" name="RememberMe" value="true">
            <a class="form-control" href="/account/register">Регистрация нового пользователя</a>
    </div>
</div>
<div>
    <button type="submit" asp-controller="Account" asp-action="Login">Войти</button>
</div>
</form>