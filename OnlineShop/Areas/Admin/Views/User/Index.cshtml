@model List<OnlineShop.Models.UserViewModel>
<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")


    <div class="col-9">
        <div class="row">
            <h3>Список пользователей</h3>
        </div>

        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Логин</th>
                        <th>Телефон</th>                     
                        <th></th>


                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].Name</td>
                            <td>@Model[i].Phone</td>
                            <td><a asp-area="Admin" 
                                   asp-controller="User" 
                                   asp-action="Detail" 
                                   asp-route-id="@Model[i].Id">Подробнее</a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
    
